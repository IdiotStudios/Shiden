{
  "name": "Shiden",
  "scopeName": "source.shiden",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#declarations" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#builtins" },
    { "include": "#calls" },
    { "include": "#punctuation" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [{ "name": "comment.line.double-slash.shiden", "match": "//.*$" }]
    },
    "strings": {
      "patterns": [
        { "name": "string.quoted.double.shiden", "begin": "\"", "end": "\"", "patterns": [{ "match": "\\\\.", "name": "constant.character.escape.shiden" }] }
      ]
    },
    "numbers": {
      "patterns": [{ "name": "constant.numeric.shiden", "match": "\\b\\d+\\b" }]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.function.declaration",
          "match": "\\b(fn)\\b\\s+(new)\\b",
          "captures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "keyword.other" }
          }
        },
        {
          "name": "keyword.control",
          "match": "\\bfn\\b"
        },
        {
          "name": "keyword.other",
          "match": "\\bnew\\b"
        }
      ]
    },

    "keywords": {
      "patterns": [
        { "name": "keyword.control", "match": "\\b(let|mut|return|if|else)\\b" },
        { "name": "keyword.other", "match": "\\b(println|print)\\b" }
      ]
    },
    "functions": {
      "patterns": [
        { "name": "entity.name.function", "match": "(?<=\\bfn\\s+new\\s+)([A-Za-z_][A-Za-z0-9_]*)" }
      ]
    },

    "builtins": {
      "patterns": [
        { "name": "support.function", "match": "\\b(println|print)\\s*(?=\\()" }
      ]
    },

    "calls": {
      "patterns": [
        { "name": "entity.name.function.call", "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()" }
      ]
    },

    "punctuation": {
      "patterns": [
        { "name": "punctuation.definition.parenthesis", "match": "[()\\[\\]{}]" },
        { "name": "punctuation.separator.comma", "match": "," },
        { "name": "punctuation.terminator.statement", "match": "\\/(?=\\s|$)" }
      ]
    },

    "operators": {
      "patterns": [{ "name": "keyword.operator.shiden", "match": "==|=|<|>|\\+|-|\\*|/|&&|\\|\\||!" }]
    }
  },
  "fileTypes": ["sd"]
}