{
  "Function": {
    "scope": "source.shiden",
    "prefix": "fn",
    "body": [
      "fn new ${1:name}/",
      "    ${2:// body}/",
      "fn/"
    ],
    "description": "Insert function skeleton"
  },
  "Println": {
    "scope": "source.shiden",
    "prefix": "println",
    "body": [
      "println(\"${1:fmt}\", ${2:args})/"
    ],
    "description": "Insert println call"
  },
  "If/Else": {
    "scope": "source.shiden",
    "prefix": "if",
    "body": [
      "if ${1:cond}/",
      "    ${2:// then-block}/",
      "else/",
      "    ${3:// else-block}/",
      "fn/"
    ],
    "description": "Insert if/else block"
  },
  "While": {
    "scope": "source.shiden",
    "prefix": "while",
    "body": [
      "while ${1:cond}/",
      "    ${2:// body}/",
      "fn/"
    ],
    "description": "Insert while loop"
  },
  "For In": {
    "scope": "source.shiden",
    "prefix": "for",
    "body": [
      "for ${1:item} in ${2:iterable}/",
      "    ${3:// body}/",
      "fn/"
    ],
    "description": "Insert for-in loop"
  },
  "Let Mutable": {
    "scope": "source.shiden",
    "prefix": "letm",
    "body": [
      "let mut ${1:name} = ${2:expr}/${3:i64}"
    ],
    "description": "Insert mutable let with type"
  },
  "Function with params": {
    "scope": "source.shiden",
    "prefix": "fnp",
    "body": [
      "fn new ${1:name}(${2:arg}/)/${3:unit}",
      "    ${4:// body}/",
      "fn/"
    ],
    "description": "Insert function with params"
  },
  "Array Ops": {
    "scope": "source.shiden",
    "prefix": "push",
    "body": [
      "push(${1:arr}, ${2:val})/unit"
    ],
    "description": "Insert push call"
  },
  "Pop": {
    "scope": "source.shiden",
    "prefix": "pop",
    "body": [
      "pop(${1:arr})/unit"
    ],
    "description": "Insert pop call"
  },
  "Len": {
    "scope": "source.shiden",
    "prefix": "len",
    "body": [
      "len(${1:arr})/i64"
    ],
    "description": "Insert len call"
  },
  "Range": {
    "scope": "source.shiden",
    "prefix": "range",
    "body": [
      "range(${1:start}, ${2:end})/array"
    ],
    "description": "Insert range call"
  },
  "Read File": {
    "scope": "source.shiden",
    "prefix": "readf",
    "body": [
      "read_file(${1:path})/str"
    ],
    "description": "Insert read_file call"
  },
  "Write File": {
    "scope": "source.shiden",
    "prefix": "writef",
    "body": [
      "write_file(${1:path}, ${2:content})/unit"
    ],
    "description": "Insert write_file call"
  }
}